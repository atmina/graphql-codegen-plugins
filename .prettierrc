{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "all",
  "semi": true,
  "endOfLine": "lf",
  "bracketSpacing": false,
  "arrowParens": "always",
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "htmlWhitespaceSensitivity": "ignore",

  "overrides": [
    {
      "files": ["*.md", "*.yml"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["angular.json", "tsconfig.*", "tslint.json"],
      "options": {
        "printWidth": 20
      }
    }
  ]
}

